RescuePotion is Potion

constants:

   include blakston.khd

resources:

   RescuePotion_name_rsc = "Trank der Befreiung"
   RescuePotion_desc_rsc = "Dies ist eine Glasphiole mit einer farbigen Flüssigkeit. Sie riecht frisch, sauber und erfrischend."

   RescuePotion_bad_desc_rsc = "Dies ist eine Glasphiole mit einer leicht trüben Flüssigkeit. Nur ein Hauch davon genügt, um Dir den Magen umzudrehen."



classvars:

   vrLabelName = RescuePotion_name_rsc
   vrBadDesc = RescuePotion_bad_desc_rsc
   vrDesc = RescuePotion_desc_rsc

   viBulk = 20
   viWeight = 20
   viValue_average = 60

   viItem_type = ITEMTYPE_POTION | ITEMTYPE_SUNDRY
   viUse_type = ITEM_SINGLE_USE
   viSpellEffect = SID_RESCUE

   viPoisonPercent = 10
   viGoBadDamage = 1
   viColor = XLAT_TO_GRAY

properties:

   % Letting everyone have rescue turned out to be too powerful
   pbCheckKarma = TRUE

messages:

end
