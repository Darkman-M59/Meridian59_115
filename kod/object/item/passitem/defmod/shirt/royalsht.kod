RoyalShirt is Shirt

constants:

   include blakston.khd

resources:
   
   royalshirt_name_rsc = "Das königliche Hemd"
 
   royalshirt_desc_rsc = "Dies ist ein von der berühmten Schneiderin Madelia mit der Hand genähtes königliches Hemd. Es ist nach der neusten Mode, wenn man die hochwertigen Zeichen der auf das Kleidungsstück aufgestickten prächtigen Handschuhe in Betracht zieht."



classvars:

   viUse_type = ITEM_USE_SHIRT
   viUse_amount = 1

   vrDesc = royalshirt_desc_rsc

   viValue_average = 200

   vrName = royalshirt_name_rsc

   viDefense_base = 10               % This is the default value for piDefense_bonus

properties:

messages:

   Constructor(color1 =$, color2 = $,model = $, translation = $)
   {      
      if color1 <> $ and color2 <> $
      {
         translation = send(SYS,@EncodeTwoColorXLAT,
                            #color1=color1,#color2=color2);
         Send(self,@SetPaletteTranslation,#translation=translation);
         
         return;
      }
      
      if translation <> $
      {
         Send(self,@SetPaletteTranslation,#translation=translation);
         
         propagate;
      }

      if model <> $
      {
         Send(self,@SetPaletteTranslation,#translation=Send(model,@GetPaletteTranslation));
         
         propagate;
      }
      
      Send(self,@SetPaletteTranslation,#translation=
           Send(SYS,@EncodeTwoColorXLAT,#color1=XLAT_TO_BLUE,#color2=XLAT_TO_SKIN1));
           
      propagate;
   }

   HasSkinTones()
   {
      return FALSE;
   }

end
%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%



