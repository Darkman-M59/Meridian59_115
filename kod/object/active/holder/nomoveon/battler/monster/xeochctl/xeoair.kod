XeoAir is Xeochicatl

constants:

   include blakston.khd

   ANIM_CAST = 2     %% cast spell animation.             

resources:

   XeoAir_name_rsc = "Der Ve'xeochicatl"
   XeoAir_koc_name_rsc = "ve'xeo'chicatl"
   XeoAir_icon_rsc = Xeo.bgf
   XeoAir_desc_rsc = "Vor Dir steht ein Ve'Xeochicatl, ein furchterregendes Monster, am Leben erhalten durch die chaotische Magie Meridians. Der Ve'Xeochicatl ist die Verkörperung der Zerstörung, ein grausames Monster, das unbesiegbar scheint. Diese Kreaturen ernähren sich von der Magie des Landes, welche sie sehr mächtig macht. Es gibt reichlich Gerüchte über die Herkunft dieser Monster, aber Du hast wenig Zeit, um darüber nachzudenken, in der Gegenwart einer solch zerstörerischen Kraft!"







   XeoAir_sound_aware = xeo4awr.wav

 classvars:

   vrName = XeoAir_name_rsc
   vrKocName = XeoAir_koc_name_rsc
   
   viAttack_type = ATCK_WEAP_MAGIC
   viLevel = 150
   viDifficulty = 7
   viSpeed = SPEED_VERY_FAST
   vrSound_aware = XeoAir_sound_aware

properties:

   piAnimation = ANIM_NONE
   piMana = 30

   % What do we drop on death?
   pcTreasureItem = &SkyHeartStone

messages:

   Constructed()
   {
      plResistances = [ [-20, ATCK_WEAP_NERUDITE ],
                        [-10, ATCK_WEAP_MAGIC ],
                        [110, -ATCK_SPELL_SHOCK ],
                        [100, -ATCK_SPELL_QUAKE ]
                      ];
                        
      piColor_Translation = send(SYS,@EncodeTwoColorXLAT,#color1=XLAT_TO_SKY);

      propagate;
   }

   ChooseSpell()
   {
      local iRandom;

      iRandom = random(1,100);

      if iRandom < 60
      {
         return [SID_LIGHTNING, 3];
      }
      else
      {
         if iRandom < 70
         {
            return [SID_WINDS, 5];
         }
         else
         {
            if (iRandom < 80) and (Send(self,@CanCastWallSpell))
            {
               return [SID_LIGHTNINGWALL, 10];
            }
            else
            {
               return [SID_FLASH, 1];
            }
         }
      }

      return $;
   }


end
%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%

