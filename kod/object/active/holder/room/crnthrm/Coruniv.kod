   {
      local oBook;

      oBook = Create(&BookPedestal,#Name=genealogy_tos_name,#Text=genealogy_tos);
      Send(self,@NewHold,#what=oBook,
           #new_row=10,#new_col=29,#fine_row=0,#new_angle=ANGLE_NORTH);

